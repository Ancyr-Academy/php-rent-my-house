<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Domain\Entity\House" table="houses">
        <id name="id" type="string" column="id"/>
        <one-to-many field="entries" target-entity="App\Domain\Entity\CalendarEntry" mapped-by="house" fetch="EAGER">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        <many-to-one field="owner" target-entity="App\Domain\Entity\User">
            <join-column name="owner_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>